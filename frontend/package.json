  "scripts": {
    "build": "webpack --config webpack.config.js --mode=production",
    "build:dev": "webpack --config webpack.config.js",
    "start": "http-server ./dist",
    "start:dev": "npm run build:dev && http-server ./dist",
    "dev": "webpack --watch",
