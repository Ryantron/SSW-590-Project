    "prepare": "cd .. && husky ./.husky",
    "lint-staged": "lint-staged",
    "test:unit": "jest unit --detectOpenHandles",
    "test:int": "jest int --detectOpenHandles"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "devDependencies": {
    "@babel/core": "^7.26.10",
    "@babel/preset-env": "^7.26.9",
    "@eslint/js": "^9.23.0",
    "babel-jest": "^29.7.0",
    "babel-loader": "^10.0.0",
    "css-loader": "^7.1.2",
    "eslint": "^9.23.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-jest": "^28.11.0",
    "globals": "^16.0.0",
    "html-bundler-webpack-plugin": "^4.19.2",
    "html-webpack-plugin": "^5.6.3",
    "husky": "^9.1.7",
    "jasmine": "^5.6.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^15.5.0",
    "prettier": "^3.5.3",
    "style-loader": "^4.0.0",
    "webpack": "^5.98.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "axios": "^1.8.4",
    "http-server": "^14.1.1",
    "validator": "^13.15.0",
    "zod": "^3.24.2"
  },
  "lint-staged": {
    "**/*.js": [
      "npm run lint:check",
      "npm run format:check",
      "npm run test:unit",
      "npm run test:int"
    ]
  }
